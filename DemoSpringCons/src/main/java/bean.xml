<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans   
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"> 

<bean id="emp" class="com.ltts.DemoSpringCons.Employee">
<constructor-arg name="empid" value="101"></constructor-arg>
<constructor-arg name="empname" value="Neha"></constructor-arg>
<constructor-arg name="empaddress" value="Mysore"></constructor-arg>
</bean>

<bean id="emp1" class="com.ltts.DemoSpringCons.Employee">
<property name="empid" value="102"></property>
<property name="empname" value="Ajay"></property>
<property name="empaddress" value="Hyd"></property>
</bean>

</beans>
